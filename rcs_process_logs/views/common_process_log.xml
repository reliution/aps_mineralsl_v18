<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="common_process_log_form" model="ir.ui.view">
        <field name="name">common.process.log.form</field>
        <field name="model">common.process.log</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="res_model" invisible="1"/>
                            <field name="name"/>
                            <field name="message"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Log Lines">
                            <field name="line_ids">
                                <list string="Log Lines" decoration-danger="state == 'error'"
                                      decoration-success="state == 'success'">
                                    <field name="name"/>
                                    <field name="company_id"/>
                                    <field name="message"/>
                                    <field name="state" column_invisible="True"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="name"/>
                                            <field name="company_id"/>
                                        </group>
                                    </group>
                                    <group>
                                        <field name="message"/>
                                        <field name="state"/>
                                    </group>
                                    <notebook>
                                        <page string="Response">
                                            <group>
                                                <field name="response"/>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                        <page name="response" string="Response">
                            <list>
                                <field name="response"/>
                            </list>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="common_process_log_tree" model="ir.ui.view">
        <field name="name">common.process.log.tree</field>
        <field name="model">common.process.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="message"/>
            </list>
        </field>
    </record>

    <record id="action_common_log" model="ir.actions.act_window">
        <field name="name">Common Logs</field>
        <field name="res_model">common.process.log</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="common_process_log_tree"/>
        <field name="context">{'create': False, 'edit': False, 'delete': False}</field>
    </record>

    <menuitem id="main_menu_common_log" name="Common Logs"
              web_icon="rcs_process_logs,static/description/icon.png"/>

    <menuitem id="menu_common_log"
              name="Common Logs"
              parent="main_menu_common_log"
              action="action_common_log"
              sequence="1"/>

</odoo>
