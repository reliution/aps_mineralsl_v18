<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="alankit_account_move_form_inherit" model="ir.ui.view">
            <field name="name">alankit.account_move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='invoice_tab']" position="after">
                    <page name="alankit_details" string="Alankit Details"
                          invisible="move_type not in ('out_invoice','out_refund', 'in_invoice','in_refund')">
                        <group name="E-way Bill Details"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
