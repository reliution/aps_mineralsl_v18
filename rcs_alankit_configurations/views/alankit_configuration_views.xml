<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="alankit_instance_form_view" model="ir.ui.view">
            <field name="name">alankit.api.configuration.form</field>
            <field name="model">alankit.api.configuration</field>
            <field name="arch" type="xml">
                <form string="Alankit Instance">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,verify"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group name="user_details">
                            <group>
                                <field name="username"/>
                                <field name="password"/>
                            </group>
                            <group>
                                <field name="gstin"/>
                                <field name="subscription_key"/>
                                <field name="app_key"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="alankit_instance_list_view" model="ir.ui.view">
            <field name="name">alankit.api.configuration.list</field>
            <field name="model">alankit.api.configuration</field>
            <field name="arch" type="xml">
                <list string="Alankit Instance">
                    <field name="name"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                                      decoration-success="state == 'verify'"/>
                </list>
            </field>
        </record>

        <record id="alankit_instance_graph_view" model="ir.ui.view">
            <field name="name">alankit.api.configuration.graph</field>
            <field name="model">alankit.api.configuration</field>
            <field name="arch" type="xml">
                <graph string="ModelTitle">
                    <field name="name"/>
                </graph>
            </field>
        </record>

        <record id="alankit_instance_pivot_view" model="ir.ui.view">
            <field name="name">alankit.api.configuration.pivot</field>
            <field name="model">alankit.api.configuration</field>
            <field name="arch" type="xml">
                <pivot string="ModelTitle">
                    <field name="name" type="row"/>
                </pivot>
            </field>
        </record>

        <record id="alankit_instance_search_view" model="ir.ui.view">
            <field name="name">alankit.api.configuration.search</field>
            <field name="model">alankit.api.configuration</field>
            <field name="arch" type="xml">
                <search string="ModelTitle">
                    <group expand="1" string="Group By">
                        <filter string="Name" name="name" domain="[]"
                                context="{'group_by':'name'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="alankit_instance_act_window" model="ir.actions.act_window">
            <field name="name">Alankit Instance</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">alankit.api.configuration</field>
            <field name="view_mode">list,form,graph,pivot</field>
            <field name="context">{"search_default_example_field":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <!--        Alankit Instance Menu-->
        <menuitem name="Alankit Configurations" id="alankit_configurations"/>

        <menuitem name="Alankit Instance"
                  id="alankit_instance"
                  action="alankit_instance_act_window"
                  parent="alankit_configurations"/>

    </data>
</odoo>
