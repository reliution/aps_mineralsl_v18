<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="alankit_account_move_form_inherit" model="ir.ui.view">
            <field name="name">alankit.account_move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_set_checked']" position="after">
                    <button name="create_eway_bill" string="Send E-waybill"
                            invisible="move_type not in ('out_invoice','out_refund', 'in_invoice','in_refund') or (state != 'posted') or eway_bill_generated"
                            class="oe_highlight" type="object"/>
                    <button name="cancel_ewaybill" string="Cancel E-Way bill"
                            invisible="(state != 'posted') or not eway_bill_generated or eway_bill_canceled"
                            class="oe_highlight"
                            type="object"/>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="open_alankit_invoice_ewaybill_logs" type="object" class="oe_stat_button" icon="fa-history"
                            invisible="ewaybill_log_count == 0">
<!--                            attrs="{'invisible': [('ewaybill_log_count', '=', 0)]}">-->
                        <field name="ewaybill_log_count" widget="statinfo" string="Alankit EwayBill Logs"/>
                    </button>
                </xpath>
<!--                <xpath expr="//div[@name='journal_div']" position="after">-->
<!--                    <field name="eway_bill_generated"-->
<!--                           attrs="{'invisible': [('move_type','not in', ['out_invoice','out_refund', 'in_invoice','in_refund'])]}"/>-->
<!--                    <field name="eway_bill_canceled"-->
<!--                           attrs="{'invisible': ['|',('eway_bill_generated','=',False),('move_type','not in', ['out_invoice','out_refund', 'in_invoice','in_refund'])]}"/>-->
<!--                </xpath>-->
                <xpath expr="//group[@name='E-way Bill Details']" position="inside">
                    <group>
<!--                        <field name="document_type" invisible="1"/>-->
                        <field name="sub_supply_type"/>
                        <field name="transporter_id"/>
                        <field name="transportation_gstin"/>
                        <field name="transporter_contact_no" widget="phone" force_save="1"/>
                        <!--                            <field name="sub_supply_desc"/>-->
                    </group>
                    <group>
                        <!--                                <field name="transaction_type"/>-->
                        <field name="transportation_distance"/>
                        <field name="transporter_in_mode"/>
                        <field name="transportation_doc_name"
                               invisible="transporter_in_mode not in ['2', '3', '4']"
                               required="transporter_in_mode in ['2', '3', '4']"/>
<!--                               attrs="{'invisible': [('transporter_in_mode', 'not in', ['2', '3', '4'])], 'required': [('transporter_in_mode', 'in', ['2', '3', '4'])]}"/>-->
                        <field name="transportation_doc_date"
                               invisible="transporter_in_mode not in ['2', '3', '4']"
                               required="transporter_in_mode in ['2', '3', '4']"/>
<!--                               attrs="{'invisible': [('transporter_in_mode', 'not in', ['2', '3', '4'])], 'required': [('transporter_in_mode', 'in', ['2', '3', '4'])]}"/>-->
                        <field name="vehicle_no"
                               invisible="transporter_in_mode != '1'"
                               required="transporter_in_mode != '1'"/>
<!--                               attrs="{'invisible': [('transporter_in_mode', '!=', '1')], 'required': [('transporter_in_mode', '=', '1')]}"/>-->
                        <field name="vehicle_type"
                               invisible="transporter_in_mode != '1'"
                               required="transporter_in_mode != '1'"/>
<!--                               attrs="{'invisible': [('transporter_in_mode', '!=', '1')], 'required': [('transporter_in_mode', '=', '1')]}"/>-->

                    </group>
                </xpath>
                <xpath expr="//page[@name='alankit_details']" position="inside">
                    <group string="Generated E-way Bill Details">
                        <field name="eway_bill_no" readonly="1" force_save="1"/>
                        <field name="eway_bill_date" readonly="1" force_save="1"/>
                        <field name="eway_bill_valid_till"
                               invisible="eway_bill_canceled"/>
<!--                               attrs="{'invisible':[('eway_bill_canceled', '=', True)]}"/>-->
                        <field name="eway_bill_cancel_date"
                               invisible="not eway_bill_canceled"/>
<!--                               attrs="{'invisible':[('eway_bill_canceled', '=' , False)]}"/>-->
                        <field name="eway_bill_cancel_reason"
                               invisible="not eway_bill_canceled"/>
<!--                               attrs="{'invisible':[('eway_bill_canceled', '=' , False)]}"/>-->
                    </group>
                    <group>
                        <group>
                            <field name="eway_bill_generated"/>
                        </group>
                        <group>
                            <field name="eway_bill_canceled"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="account_move_line_rcs_alankit_eway_bill" model="ir.ui.view">
            <field name="name">account.move.inherit.rcs_alankit_eway_bill</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="eway_bill_no" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="view_out_credit_note_tree_inherit" model="ir.ui.view">
            <field name="name">view.out.credit.note.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_credit_note_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="eway_bill_no" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="view_in_invoice_refund_tree_inherit" model="ir.ui.view">
            <field name="name">view.in.invoice.refund.tree.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_refund_tree"/>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="eway_bill_no" optional="hide"/>
                </field>
            </field>
        </record>

        <record id="account.action_move_out_invoice_type" model="ir.actions.act_window">
            <field name="view_id" ref="account_move_line_rcs_alankit_eway_bill"/>
        </record>

    </data>
</odoo>
